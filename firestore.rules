rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===================================
    // ヘルパー関数
    // ===================================

    // ユーザーが認証済みか確認
    function isAuthenticated() {
      return request.auth != null;
    }

    // スタッフデータを取得
    // 注意: この関数は追加のドキュメント読み取りコストがかかります
    // パフォーマンス最適化のため、Firebase Authentication Custom Claims の使用を推奨
    function getStaffData() {
      return get(/databases/$(database)/documents/staff/$(request.auth.uid)).data;
    }

    // ユーザーのロールを取得
    function getUserRole() {
      return getStaffData().role;
    }

    // ユーザーの組織IDを取得
    function getUserOrganizationId() {
      return getStaffData().organizationId;
    }

    // 管理者かどうか
    function isAdmin() {
      return isAuthenticated() && getUserRole() == '管理者';
    }

    // 開発者かどうか
    function isDeveloper() {
      return isAuthenticated() && getUserRole() == '開発者';
    }

    // 一般ユーザーかどうか
    function isGeneral() {
      return isAuthenticated() && getUserRole() == '一般';
    }

    // 管理者または開発者かどうか
    function isAdminOrDev() {
      return isAdmin() || isDeveloper();
    }

    // 自分自身のデータかどうか
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // 同じ組織に属しているかどうか
    function isSameOrganization(organizationId) {
      return isAuthenticated() && getUserOrganizationId() == organizationId;
    }

    // データが同じ組織に属しているかどうか（既存データ）
    function resourceBelongsToUserOrg() {
      return resource.data.organizationId == getUserOrganizationId();
    }

    // 新規データが同じ組織に属しているかどうか
    function requestBelongsToUserOrg() {
      return request.resource.data.organizationId == getUserOrganizationId();
    }

    // ===================================
    // 事業所コレクション
    // ===================================
    match /organizations/{orgId} {
      allow read: if isAuthenticated() && (isDeveloper() || isSameOrganization(orgId));
      allow create: if isDeveloper();
      allow update: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg());
      allow delete: if isDeveloper();
    }

    // ===================================
    // 職員コレクション
    // ===================================
    match /staff/{staffId} {
      allow read: if isAuthenticated() && (isDeveloper() || resourceBelongsToUserOrg());
      allow create: if (isDeveloper() || isAdmin()) && (isDeveloper() || requestBelongsToUserOrg());
      allow update: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg()) || 
                       (isOwner(staffId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'email', 'staffNumber', 'organizationId']));
      allow delete: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg());
    }

    // ===================================
    // 利用者コレクション
    // ===================================
    match /clients/{clientId} {
      allow read: if isAuthenticated() && (isDeveloper() || resourceBelongsToUserOrg());
      allow create: if (isDeveloper() || isAdmin()) && (isDeveloper() || requestBelongsToUserOrg());
      allow update: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg());
      allow delete: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg());
    }

    // ===================================
    // 課金データコレクション
    // ===================================
    match /billing/{billingId} {
      allow read: if isDeveloper();
      allow create: if isDeveloper();
      allow update: if isDeveloper();
      allow delete: if isDeveloper();
    }

    // ===================================
    // エラーログコレクション
    // ===================================
    match /errorLogs/{errorId} {
      allow read: if isDeveloper();
      allow create: if isDeveloper();
      allow update: if isDeveloper();
      allow delete: if isDeveloper();
    }

    // ===================================
    // システムメトリクスコレクション
    // ===================================
    match /systemMetrics/{metricId} {
      allow read: if isDeveloper();
      allow create: if isDeveloper();
      allow update: if isDeveloper();
      allow delete: if isDeveloper();
    }

    // ===================================
    // サブスクリプションコレクション
    // ===================================
    match /subscriptions/{subId} {
      allow read: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg());
      allow create: if isDeveloper();
      allow update: if isDeveloper();
      allow delete: if isDeveloper();
    }

    // ===================================
    // 通知コレクション
    // ===================================
    match /notifications/{notificationId} {
      allow read: if isDeveloper() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAdminOrDev();
      allow update: if isDeveloper() || (isAuthenticated() && resource.data.userId == request.auth.uid && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']));
      allow delete: if isAdminOrDev();
    }

    // ===================================
    // ユーザー設定コレクション
    // ===================================
    match /userSettings/{userId} {
      allow read: if isDeveloper() || isOwner(userId);
      allow write: if isOwner(userId);
    }

    // ===================================
    // お気に入りアプリコレクション
    // ===================================
    match /favoriteApps/{userId} {
      allow read: if isDeveloper() || isOwner(userId);
      allow write: if isOwner(userId);
    }

    // ===================================
    // レポートコレクション
    // ===================================
    match /reports/{reportId} {
      allow read: if isDeveloper() || (isAuthenticated() && resourceBelongsToUserOrg());
      allow create: if isDeveloper() || (isAdmin() && requestBelongsToUserOrg());
      allow update: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg());
      allow delete: if isDeveloper() || (isAdmin() && resourceBelongsToUserOrg());
    }

    // ===================================
    // 監査ログコレクション
    // ===================================
    match /auditLogs/{logId} {
      allow read: if isDeveloper();
      allow write: if false;
    }

    // ===================================
    // システム設定コレクション
    // ===================================
    match /systemSettings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isDeveloper();
    }

    // ===================================
    // デフォルトルール（すべて拒否）
    // ===================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
