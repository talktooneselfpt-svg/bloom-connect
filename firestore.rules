rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ヘルパー関数：ユーザーが認証済みかどうか
    function isSignedIn() {
      return request.auth != null;
    }

    // ヘルパー関数：ユーザーのロールを取得
    function getUserRole() {
      return get(/databases/$(database)/documents/staff/$(request.auth.uid)).data.role;
    }

    // ヘルパー関数：管理者かどうか
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }

    // ヘルパー関数：マネージャー以上かどうか
    function isManagerOrAbove() {
      return isSignedIn() && getUserRole() in ['admin', 'manager'];
    }

    // ヘルパー関数：リーダー以上かどうか
    function isLeaderOrAbove() {
      return isSignedIn() && getUserRole() in ['admin', 'manager', 'leader'];
    }

    // ヘルパー関数：自分自身のデータかどうか
    function isOwn(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // 職員データ（staff コレクション）
    match /staff/{staffId} {
      // 読み取り：認証済みユーザーのみ
      allow read: if isSignedIn();

      // 作成：管理者またはマネージャーのみ
      allow create: if isManagerOrAbove();

      // 更新：管理者・マネージャー、またはリーダー以上で自分自身のデータの場合
      allow update: if isManagerOrAbove() ||
                       (isLeaderOrAbove() && isOwn(staffId));

      // 削除：管理者のみ
      allow delete: if isAdmin();
    }

    // 組織データ（organizations コレクション）- 将来の拡張用
    match /organizations/{organizationId} {
      // 読み取り：認証済みユーザーのみ
      allow read: if isSignedIn();

      // 書き込み：管理者のみ
      allow write: if isAdmin();
    }

    // 利用者データ（clients コレクション）
    match /clients/{clientId} {
      // 読み取り：認証済みユーザーのみ
      allow read: if isSignedIn();

      // 作成：リーダー以上のみ
      allow create: if isLeaderOrAbove();

      // 更新：リーダー以上のみ
      allow update: if isLeaderOrAbove();

      // 削除：管理者のみ
      allow delete: if isAdmin();
    }

    // 通知データ（notifications コレクション）
    match /notifications/{notificationId} {
      // ヘルパー関数：この通知が自分宛かどうか
      function isTargetUser() {
        let data = resource.data;
        return data.type == 'personal' && data.targetUserId == request.auth.uid;
      }

      // ヘルパー関数：この通知が自分の事業所宛かどうか（実装時に事業所IDを取得する必要あり）
      function isTargetOrganization() {
        let data = resource.data;
        // TODO: ユーザーの事業所IDを取得して比較
        return data.type == 'organization';
      }

      // ヘルパー関数：この通知が全体通知かどうか
      function isGlobal() {
        return resource.data.type == 'global';
      }

      // 読み取り：自分宛の通知（個人 + 事業所 + 全体）
      allow read: if isSignedIn() && (isTargetUser() || isTargetOrganization() || isGlobal());

      // 作成：管理者のみ
      allow create: if isAdmin();

      // 更新：自分宛の通知のみ（既読マーク用）
      allow update: if isSignedIn() && (isTargetUser() || isTargetOrganization() || isGlobal());

      // 削除：管理者のみ
      allow delete: if isAdmin();
    }

    // コミュニティ投稿データ（posts コレクション）
    match /posts/{postId} {
      // ヘルパー関数：投稿の作成者かどうか
      function isPostAuthor() {
        return isSignedIn() && resource.data.authorId == request.auth.uid;
      }

      // 読み取り：認証済みユーザーのみ（アーカイブされていない投稿）
      allow read: if isSignedIn();

      // 作成：認証済みユーザーのみ
      allow create: if isSignedIn() &&
                       request.resource.data.authorId == request.auth.uid;

      // 更新：投稿の作成者のみ、または管理者（ピン留め・アーカイブ）
      allow update: if isPostAuthor() || isAdmin();

      // 削除：投稿の作成者または管理者のみ
      allow delete: if isPostAuthor() || isAdmin();
    }

    // コメントデータ（comments コレクション）
    match /comments/{commentId} {
      // ヘルパー関数：コメントの作成者かどうか
      function isCommentAuthor() {
        return isSignedIn() && resource.data.authorId == request.auth.uid;
      }

      // 読み取り：認証済みユーザーのみ
      allow read: if isSignedIn();

      // 作成：認証済みユーザーのみ
      allow create: if isSignedIn() &&
                       request.resource.data.authorId == request.auth.uid;

      // 更新：コメントの作成者のみ
      allow update: if isCommentAuthor();

      // 削除：コメントの作成者または管理者のみ
      allow delete: if isCommentAuthor() || isAdmin();
    }
  }
}
